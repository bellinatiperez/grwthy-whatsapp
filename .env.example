# Application
APP_PORT=3100
APP_API_KEY=your-global-api-key
APP_CORS_ORIGIN=*

# Meta Graph API
META_API_URL=https://graph.facebook.com
META_API_VERSION=v25.0
META_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/whatsapp_meta_api

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=wma:
REDIS_TTL=300

# S3/MinIO
S3_ENDPOINT=localhost
S3_PORT=9000
S3_USE_SSL=false
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=whatsapp-meta-api
S3_REGION=us-east-1

# Logging
LOG_LEVEL=info
